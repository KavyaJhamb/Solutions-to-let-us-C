/*display series 1,3,5,7,15,31...n*/
#include<stdio.h>
int main()
{
  int n,a=1;
  printf("Enter any number n:");
	scanf("%d",&n);
  printf("%d\n",a);
  for( int d=2;a<n;d*=2);
  {
      int d;
      a+=d;                                            
      printf("%d\n",a);
  }
}
/*output:
Enter the number31
1
3
7
15
31
*/
