#include<stdio.h>
int main()
{
    float l, b, r,ca, cc, ra, rp;
    // For rectangle 
    printf("Enter the length of rectangle: ");
    scanf( "%f", &l);
    printf("Enter the breadth of rectangle: ");
    scanf( "%f", &b);
    
    //For circle
        scanf("%f", &r);
    printf("Enter the radius of circle: ");
    scanf("%f", &r);
    
    ra = l * b;    
    rp = 2 * (l + b); 
    
    ca = 3.14 * r * r;
    cc = 2 * 3.14 * r;
    printf("\nThe area of rectangle: %0.2f", ra);
    printf("\nThe perimeter of rectangle: %0.2f", rp);
    printf("\nThe area of circle : %0.2f", ca);
    printf("\nThe perimeter of rectangle : %0.2f", cc);
    return (0);
  }
